<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_company_pricelist_inherit_form_view" model="ir.ui.view">
        <field name="name">res.company.pricelist.inherit.form.view</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="E-Commerce" name="ecommerce_info">
                    <group>
                        <field name="retail_price_list"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>